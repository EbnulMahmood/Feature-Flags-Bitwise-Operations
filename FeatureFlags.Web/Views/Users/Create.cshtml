@model FeatureFlags.Core.ViewModels.UserViewModel
@using FeatureFlags.Core.Helpers.TagHelpers

<style>
    .custom-checkbox-spacing .form-check {
        margin-bottom: 10px;
    }

    .custom-input-spacing {
        margin-bottom: 10px;
    }
</style>

<h1>Create User</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group custom-input-spacing">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group custom-input-spacing">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    @Html.EnumCheckboxesFor(model => model.Flags, includeControlLabel: false, customCssClass: "custom-checkbox-spacing")

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
